<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <shape>
            <stroke android:width="1.0dip" android:color="@color/splash_bg" android:dashGap="2.0dip" android:dashWidth="4.0dip" />
            <solid android:color="@color/splash_bg" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.0dip" android:color="@color/colorAccent" />
            <solid android:color="@color/splash_bg" />
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_selected="true">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/main_text_color_dark" />
            <solid android:color="@color/main_text_color_dark" />
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/divider" />
            <solid android:color="@color/main_background" />
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/divider" />
            <solid android:color="@color/main_background" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dip" android:color="@color/divider" />
            <solid android:color="@color/main_background" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>